<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="@dimen/back_arrow_width"
                android:layout_height="@dimen/back_arrow_height"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:background="@drawable/back_arrow_new" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add Device"
                android:textColor="#ffffffff"
                android:textSize="17sp"
                android:textStyle="normal" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="Test"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_main_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="0dp"
                android:textSize="22sp"
                app:ms_arrowColor="#0000ff"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#9A9A9A"
                app:ms_floatingLabelText="Select Room"
                app:ms_hint="Select Room"
                app:ms_hintColor="#000000"
                app:ms_multiline="true"
                app:paddingStart="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_router_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="#706e6e"/>

                <Button
                    android:id="@+id/btn_scan_wifi"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:text="Scan Wifi"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/buttonshape1" />
            </LinearLayout>

            <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<EditText-->
            <!--android:id="@+id/et_ssid"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="SSID"-->
            <!--android:inputType="text"-->
            <!--android:textColor="#706e6e"-->
            <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
            <!--android:singleLine="true" />-->

            <!--</android.support.design.widget.TextInputLayout>-->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="text"
                    android:textColor="#706e6e"
                    android:textStyle="normal"
                    android:paddingBottom="@dimen/activity_vertical_margin" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimary"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_margin="20dp"-->
