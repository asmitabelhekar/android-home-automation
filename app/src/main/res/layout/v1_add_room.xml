<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/in_back_arrow"
            android:layout_width="@dimen/back_arrow_width"
            android:layout_height="@dimen/back_arrow_height"
            android:layout_marginLeft="13dp"
            android:background="@drawable/back_arrow_new"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/updateAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selectRoom"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:id="@+id/ll_tv_save"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="end"
                android:layout_width="wrap_content"
                android:text="Save"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:textSize="17sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_view_add_room_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false" />
</LinearLayout>
