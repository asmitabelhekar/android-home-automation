<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#cccccc"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:text=" Setting Wifi"/>

            <LinearLayout
                android:id="@+id/ll_add_device"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_button_image"
                    android:layout_width="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="45dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_add_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Add Device"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#5b5858"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/ll_synchronize"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_synchronize"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_synchronize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Synchronize"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#cccccc"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:text="Notification"/>

            <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Notification"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#cccccc"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:text="Add Light Point"/>

            <LinearLayout
                android:id="@+id/ll_add_edit_light_point"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_add_edit_light_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Add and Edit Light Point"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#5b5858"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/ll_add_room"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"

                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_add_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Add Room"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#cccccc"
                android:paddingLeft="6dp"
                android:gravity="center_vertical"
                android:text="Profile"/>

            <LinearLayout
                android:id="@+id/ll_edit_profile"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Edit profile"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#5b5858"
                android:layout_height="1dp"></View>

            <LinearLayout
                android:id="@+id/ll_change_password"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/wifi"/>

                <TextView
                    android:id="@+id/tv_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"
                    android:text="Change Password"
                    android:textSize="@dimen/tv_title"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#5b5858" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>